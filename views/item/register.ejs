<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include("../partials/bootstrap") %>
    <title>User</title>
</head>

<body style="font-family: 'Open Sans', sans-serif;">

    <%- include("../partials/navbar", {user}) %>

    <div class="container">
        <div class="row pt-5">
            <div class="col">
                <div class="card-body">
                        <form method="POST" class="form-inline">
                                <div class="form-group">
                                    <label for="name" class="col-sm-2 control-label">Item</label>
                                    <div class="col-sm-10">

                                        <input type="text" class="form-control" id="name" name="name" placeholder="Item's Name">
                                    </div>
                                </div>
                                <div class="form-group">

                                    <select name="StorageId" id="" class="col-sm-offset-2 col-sm-10">
                                        <%storages.forEach(storage => {%>
                                        <option value="<%=storage.id%>"><%=storage.name%> | <%=storage.capacity%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                            <a href="/item"><button class="btn btn-primary">Cancel</button></a>
                            
                        
                </div>
            </div>
        </div>
    </div>
    

</body>

</html>